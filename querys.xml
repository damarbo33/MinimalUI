<BBDD>
	<QUERY id="juegos">
		<SENTENCE>
			SELECT * FROM JUEGOS WHERE ID=? AND PP=?
		</SENTENCE>
	</QUERY>
	
	<QUERY id="emuladores">
		<SENTENCE>
			SELECT * FROM EMULADOR WHERE IDPROG=?
		</SENTENCE>
	</QUERY>
	
	<QUERY id="deleteroms">
		<SENTENCE>
			delete from ROMS
		</SENTENCE>
		<WHERECLAUSE>
			where IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="deleterutas">
		<SENTENCE>
			delete from RUTAS
		</SENTENCE>
		<WHERECLAUSE>
			where IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="deleterominfo">
		<SENTENCE>
			delete from ROMINFO
		</SENTENCE>
		<WHERECLAUSE>
			where IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="deleteemulador">
		<SENTENCE>
			delete from EMULADOR
		</SENTENCE>
		<WHERECLAUSE>
			where IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="updateEmulador">
		<SENTENCE>
			UPDATE EMULADOR 
			SET NOMBREEMU=?,RUTAEMU=?,PARMSEMU=?,RUTAROMS=?,DESCOMPRIMIR=?,EXTENSIONES=?,IMGRUTAFONDO=?,SHOWTITLE=? 
		</SENTENCE>
		<WHERECLAUSE>
			WHERE IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="insertEmulador">
		<SENTENCE>
			INSERT INTO EMULADOR 
			(NOMBREEMU, RUTAEMU, PARMSEMU, RUTAROMS, EXTENSIONES, IMGRUTAFONDO, DESCOMPRIMIR, SHOWTITLE) 
			VALUES (?,?,?,?,?,?,?,?)
		</SENTENCE>
	</QUERY>
	
	<QUERY id="selectEmulador">
		<SENTENCE>
			SELECT IDPROG, NOMBREEMU, RUTAEMU,PARMSEMU, RUTAROMS, EXTENSIONES, DESCOMPRIMIR, IMGRUTAFONDO, SHOWTITLE FROM EMULADOR
		</SENTENCE>
		<WHERECLAUSE>
			WHERE IDPROG=?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="insertRutas">
		<SENTENCE>
			INSERT INTO RUTAS (IDPROG, IDRUTA, RUTA) VALUES (?, ?, ?)
		</SENTENCE>
	</QUERY>
	
	<QUERY id="insertRoms">
		<SENTENCE>
			INSERT INTO ROMS (IDROM, IDPROG, NOMBRE, IDRUTA) VALUES (?, ?, ?, ?)
		</SENTENCE>
	</QUERY>
	
	<QUERY id="insertRominfo">
		<SENTENCE>
			INSERT INTO ROMINFO (IDROM, IDPROG, TITLE) VALUES (?, ?, ?)
		</SENTENCE>
	</QUERY>
	
	<QUERY id="updateRutaEmu">
		<SENTENCE>
			UPDATE emulador SET rutaemu=replace(rutaemu, ?, ?)
		</SENTENCE>
		<WHERECLAUSE>
			WHERE rutaemu LIKE ?
		</WHERECLAUSE>
	</QUERY>
	
	<QUERY id="updateRutaRoms">
		<SENTENCE>
			UPDATE emulador SET rutaroms=replace(rutaroms, ?, ?) 
		</SENTENCE>
		<WHERECLAUSE>
			WHERE rutaroms LIKE ?
		</WHERECLAUSE>
	</QUERY>
</BBDD>